{
  "Logging": {
    "PathFormat": "Logs/IPF.Brewery.API-{Date}.txt",
    "Json": true,
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "System": "Information"
    }
  },
  "AllowedHosts": "*",
  "BreweryConfiguration": {
    "ConnectionString": "Data Source=(localdb)\\projects;Initial Catalog=Brewery;Integrated Security=True",
    "MaxRetryCount": 10,
    "MaxRetryDelayInSeconds": 30
  }
}
